@*@model library.elegalhubs.com.Ticketing.Tickets*@
@model lms.elegalhubs.com.Areas.Admin.Models.TicketsDetailsViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="card-title">
            Create Ticket
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()
            <!--begin::Input group-->
            <div class="row g-9 mb-8">
                <!--begin::Col-->
                <div class="col-md-8 fv-row">
                    <!--begin::Label-->
                    <label asp-for="Tickets.Subject" class="d-flex align-items-center fs-6 fw-bold mb-2">
                        <span class="required">Subject</span>
                        <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="Specify a subject for your issue"></i>
                    </label>
                    <!--end::Label-->
                    <input type="text" class="form-control form-control-solid" placeholder="Enter your ticket subject" asp-for="Tickets.Subject" />
                    <span asp-validation-for="Tickets.Subject" class="text-danger"></span>

                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-md-4 fv-row">
                    <label asp-for="Tickets.ProjectId" class="required fs-6 fw-bold mb-2"></label>
                    <select asp-for="Tickets.ProjectId" class="form-select form-select-solid" data-control="select2" data-hide-search="true" data-placeholder="Select a Project"
                            asp-items="ViewBag.ProjectId">
                        <option value="">Select a Project ...</option>
                    </select>
                    <span asp-validation-for="Tickets.ProjectId" class="text-danger"></span>

                </div>
                <!--end::Col-->
            </div>
            <!--end::Input group-->
            <!--begin::Input group-->
            <div class="row g-9 mb-8">
                <!--begin::Col-->
                <div class="col-md-4 fv-row">
                    <label asp-for="Tickets.TicketTypeId" class="required fs-6 fw-bold mb-2"></label>
                    <select asp-for="Tickets.TicketTypeId" class="form-select form-select-solid" data-control="select2" data-hide-search="true" data-placeholder="Select a ticket type"
                            asp-items="ViewBag.TicketTypeId">
                        <option value="">Select a ticket type...</option>
                    </select>
                    <span asp-validation-for="Tickets.TicketTypeId" class="text-danger"></span>
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-md-4 fv-row">
                    <label asp-for="Tickets.CategoryId" class="required fs-6 fw-bold mb-2">Category</label>
                    <select asp-for="Tickets.CategoryId" class="form-select form-select-solid" data-control="select2" data-hide-search="true" data-placeholder="Select a Category type"
                            asp-items="ViewBag.CategoryId">
                        <option value="">Select a Category type...</option>
                    </select>
                    <span asp-validation-for="Tickets.CategoryId" class="text-danger"></span>
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-md-4 fv-row">
                    <label asp-for="Tickets.PreferredContactMethodId" class="required fs-6 fw-bold mb-2">Preferred  Contact Method</label>
                    <select asp-for="Tickets.PreferredContactMethodId" class="form-select form-select-solid" data-control="select2" data-hide-search="true" data-placeholder="Select a Preferred Contact Method"
                            asp-items="ViewBag.PreferredContactMethodId">
                        <option value="">Select a Preferred Contact Method...</option>
                    </select>
                    <span asp-validation-for="Tickets.PreferredContactMethodId" class="text-danger"></span>
                </div>
                <!--end::Col-->
            </div>
            <!--end::Input group-->
            <!--begin::Input group-->
            <div class="row g-9 mb-8">
                <!--begin::Col-->
                <div class="col-md-4 fv-row">
                    <label asp-for="Tickets.DepartmentId" class="required fs-6 fw-bold mb-2">Department</label>
                    <select asp-for="Tickets.DepartmentId" class="form-select form-select-solid" data-control="select2" data-hide-search="true" data-placeholder="Select a Departmen"
                            asp-items="ViewBag.DepartmentId">
                        <option value="">Select a Department...</option>
                    </select>
                    <span asp-validation-for="Tickets.DepartmentId" class="text-danger"></span>
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-md-4 fv-row">
                    <label asp-for="Tickets.ContactId" class="fs-6 fw-bold mb-2">Contact</label>
                    <select asp-for="Tickets.ContactId" class="form-select form-select-solid" data-control="select2" data-hide-search="false" data-placeholder="Select a Contact"
                            asp-items="ViewBag.ContactId">
                        <option value="">Select a Contact ...</option>
                    </select>
                    <span asp-validation-for="Tickets.ContactId" class="text-danger"></span>
                </div>
                <!--end::Col-->
                
                <!--begin::Col-->
                <div class="col-md-4 fv-row">
                    <label asp-for="Tickets.PriorityId" class="fs-6 fw-bold mb-2">Priority</label>
                    <select asp-for="Tickets.PriorityId" class="form-select form-select-solid" data-control="select2" data-hide-search="true" data-placeholder="Select a Priority"
