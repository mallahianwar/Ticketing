                        <input class="form-control form-control-solid ps-12" placeholder="Select a date" asp-for="TicketsDetails.StartDateTime" />
                        <span asp-validation-for="TicketsDetails.StartDateTime" class="text-danger"></span>

                        @*end::Datepicker*@
                    </div>
                    @*end::Input*@
                </div>
                <!--end::Col-->
                <!--begin::Col-->
