                                        <rect opacity="0.3" x="13" y="13" width="9" height="9" rx="2" fill="black" />
                                        <rect opacity="0.3" x="2" y="13" width="9" height="9" rx="2" fill="black" />
                                    </svg>
                                </span>
                                <!--end::Svg Icon-->
                            </span>
                        </div>
                        <!--end::Icon-->
                        <!--begin::Datepicker-->
                        <input class="form-control form-control-solid ps-12" placeholder="Select a date" asp-for="TicketsDetails.EndDateTime" />
                        <span asp-validation-for="TicketsDetails.EndDateTime" class="text-danger"></span>
                        <!--end::Datepicker-->
                    </div>
                    <!--end::Input-->
                </div>
                <!--end::Col-->
            </div>
            <!--end::Input group-->
            <!--begin::Input group-->
            <div class="d-flex flex-column mb-8 fv-row">
                <label asp-for="TicketsDetails.Description" class="fs-6 fw-bold mb-2 required">Description</label>
                <textarea class="form-control form-control-solid" rows="4" asp-for="TicketsDetails.Description" placeholder="Type your ticket description"></textarea>
                <span asp-validation-for="TicketsDetails.Description" class="text-danger"></span>

            </div>
            <!--end::Input group-->
            <!--begin::Input group-->
            <div class="fv-row mb-8">
                <label class="fs-6 fw-bold mb-2">Attachments</label>
                <!--begin::Dropzone-->
                <div class="dropzone position-relative" id="kt_modal_create_ticket_attachments">
                    <!--begin::Message-->
                    <input id="Attachment" multiple name="Attachment" type="file" style="width: 100%;min-height: 100%;display: inline-block;
                        position: absolute;z-index: 1;width: 100%;height: 50px;top: 0;left: 0;opacity: 0;cursor: pointer;  " />
